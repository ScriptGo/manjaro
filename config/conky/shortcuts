conky.config = {
------------------------------------------------------------------------------------------------------------------------窗口
own_window = true,  --创建窗口
own_window_type = 'override', --窗口类型(Gnome修改为 'desktop')
own_window_class = 'Conky',
own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

own_window_argb_visual = true, --启用透明
own_window_transparent = true, --透明
background = true, --后台运行
double_buffer = true, --启用双重缓冲，消除闪烁

------------------------------------------------------------------------------------------------------------------------边框
draw_borders = false,
draw_graph_borders = false,
draw_outline = false,
draw_shades = false,  

no_buffers = true,
out_to_console = false,
out_to_stderr = false,
stippled_borders = 0,

------------------------------------------------------------------------------------------------------------------------位置
alignment = 'top_left', --窗口所在屏幕位置
gap_x = 20,             --窗口离屏幕左边或右边的距离
gap_y = 18,             --窗口离屏幕顶部或底部的距离

------------------------------------------------------------------------------------------------------------------------字体
font = 'Sarasa Mono:size=10',
uppercase = false,
use_spacer = 'none',

text_buffer_size = 2048,
use_xft = true,
override_utf8_locale = true,

------------------------------------------------------------------------------------------------------------------------颜色
color0 = 'FF00FF',	--洋红色
